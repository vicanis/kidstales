<div class="book-card">
    <div class="book-image">
        <img src="{{.ImageBase}}/{{.CurrentPageNumber}}.jpg" />
    </div>

    <a href="/books" class="goto-menu">
        <img src="/static/menu.png" />
    </a>

    <div class="arrows">
        {{if .PreviousPageURL}}
            <a href="{{.PreviousPageURL}}">
                <div class="arrow-left">&lt;</div>
            </a>
        {{else}}
            <div></div>
        {{end}}

        {{if .NextPageURL}}
            <a href="{{.NextPageURL}}">
                <div class="arrow-right">&gt;</div>
            </a>
        {{else}}
            <div></div>
        {{end}}
    </div>
</div>